{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "target": "es2017",
        "downlevelIteration": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es2017"],
        "pretty": false
    },
    "include": ["src/**/*"],
    "exclude": ["lib/**/*"]
}
